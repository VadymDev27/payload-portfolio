---
// Import your components and any utilities needed
import { SocialMediaIcons } from "@/lib/icons";
---

<footer class="text-white py-12 px-6 mb-12">
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 items-center">
    <h1 class="lg:text-6xl xl:text-7xl font-bold text-left">
      <a
        href="/"
        class="hover:text-yellow-300 transition-colors duration-300"
      >
        "Move The
        <br />
         Web Forward"
      </a>
    </h1>
    <div class="flex justify-end">
      <nav class="flex flex-wrap items-center text-lg px-2 gap-4">
        <a
          href="/about"
          class="text-gray-400 hover:text-gray-300 ml-4 transition-colors duration-300"
          >About</a
        >
        <a
          href="/projects"
          class="text-gray-400 hover:text-gray-300 ml-4 transition-colors duration-300"
          >Projects</a
        >
        <a
          href="/contact"
          class="text-gray-400 hover:text-gray-300 ml-4 transition-colors duration-300"
          >Contact</a
        >
        <SocialMediaIcons />
      </nav>
    </div>
  </div>
  <div class="text-center text-gray-400 mt-4">
    <p>
      &copy; {new Date().getFullYear()} Brayan Mejia. All rights reserved.
    </p>
  </div>
</footer>
